<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hypernym.evaconnect">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" />

    <application
        android:name=".EvaconnectApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".view.ui.activities.LinkedinActivity">

        </activity>
        <activity android:name=".view.ui.activities.SharePostActivity" />
        <activity android:name=".view.ui.activities.HomeActivity" />
        <activity
            android:name=".view.ui.activities.ForgotPassword"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".view.ui.activities.SignupDetailsActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".view.ui.activities.SignupActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".view.ui.activities.SignupActivity_0"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".view.ui.activities.SignupActivity_2"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".view.ui.activities.SignupActivity_1"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".view.ui.activities.LoginActivity"
            android:theme="@style/AppTheme.FullScreen"
            android:windowSoftInputMode="stateHidden|adjustPan">

        </activity>
        <activity
            android:name=".view.ui.activities.SplashActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.ui.activities.BlankActivity"
            android:theme="@style/AppTheme.FullScreen">

        </activity>


        <activity
            android:name=".view.ui.activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize" />

        <service
            android:name=".service.OneSignalReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE">
            <intent-filter>
                <action android:name="com.onesignal.NotificationExtender" />
            </intent-filter>
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.hypernym.evaconnect.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_list" />
        </provider>
    </application>

</manifest>